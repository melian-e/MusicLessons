{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "storeLogs": "run-script-os",
    "storeLogs:win32": "",
    "storeLogs:linux": "mkdir -p ./logs/ && touch ./logs/combined.log && touch ./logs/error.log && mkdir ./logs/old/$(date +%d-%m-%Y-%H:%M:%S)/ -p && mv ./logs/combined.log ./logs/old/$(date +%d-%m-%Y-%H:%M:%S)/combined_$(date +%d-%m-%Y-%H:%M:%S).log && mv ./logs/error.log ./logs/old/$(date +%d-%m-%Y-%H:%M:%S)/error_$(date +%d-%m-%Y-%H:%M:%S).log",
    "deleteFilesfolder": "npm run storeLogs && run-script-os",
    "deleteFilesfolder:win32": "if exist build rmdir build /q /s",
    "deleteFilesfolder:linux": "rm -rf build",
    "copyFilesFolder": "npm run deleteFilesfolder && run-script-os",
    "copyFilesFolder:win32": "xcopy /E files build\\files\\",
    "copyFilesFolder:linux": "mkdir ./build/files/ -p && cp -a ./files/. ./build/files/",
    "build": "npm run copyFilesFolder && esbuild server.ts --platform=node --bundle --outdir=build/ --external:/files/*",
    "start": "npm run build && node build/server.js",
    "dev": "nodemon --watch ./ -e js,ts,json --exec \"ts-node-esm server.ts\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.1.0",
    "@trpc/server": "^10.35.0",
    "@types/cors": "^2.8.13",
    "@types/lodash": "^4.14.195",
    "@types/lodash-es": "^4.17.8",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.5",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.0",
    "run-script-os": "^1.1.6",
    "superjson": "^1.13.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "winston": "^3.8.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.16",
    "@types/node": "^18.14.6",
    "@types/nodemailer": "^6.4.7",
    "prisma": "^5.1.0"
  }
}
